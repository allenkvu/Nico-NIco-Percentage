{
	"manifest_version": 2,

	"name": "Nico Nico Percentage",
	"description": "This extension shows various percentages from Nico Nico",
	"version": "1.0",
	"permissions": [
		"storage",
		"http://*.nicovideo.jp/"
	],
	"icons": {
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"browser_action": {
		"default_icon": "icon48.png",
		"default_popup": "options.html"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"content_scripts": [{
		"matches": ["http://*.nicovideo.jp/*"],
		"js": ["jquery.js", "contentScript.js"]
	}]
}